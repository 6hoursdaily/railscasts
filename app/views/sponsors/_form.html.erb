<div class="content">
  <%= form_for @sponsor do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :site_url, 'Site URL' %><br />
      <%= f.text_field :site_url %>
    </p>
    <p>
      <%= f.label :image_url, 'Image URL' %><br />
      <%= f.text_field :image_url %>
    </p>
    <p>
      <%= f.check_box :active %>
      <%= f.label :active %>
    </p>
    <p>
      <%= f.check_box :force_top %>
      <%= f.label :force_top, "Stay on Top" %>
    </p>
    <p><%= f.submit "Submit" %></p>
  <% end %>
</div>
